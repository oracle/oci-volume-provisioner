apiVersion: v1
kind: ReplicationController
metadata:
  name: nginx-controller-{{TEST_ID}}
spec:
  replicas: 1
  selector:
    app: nginx
  template:
    metadata:
      labels:
        app: nginx
    spec:
      containers:
      - name: nginx
        image: nginx:1.15.2
        ports:
        - containerPort: 80
        volumeMounts:
        - name: {{VOLUME_NAME}}
          mountPath: /usr/share/nginx/html
      volumes:
      - name: {{VOLUME_NAME}}
        flexVolume:
          driver: "oracle/oci"
          fsType: "ext4"
      nodeSelector:
        node.info/availability.domain: {{AVAILABILITY_DOMAIN}} 
