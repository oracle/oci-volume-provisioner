apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: nginx-pvc-{{TEST_ID}}
spec:
  storageClassName: "oci"
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 50Gi
---
apiVersion: v1
kind: ReplicationController
metadata:
  name: nginx-controller-{{TEST_ID}}
spec:
  replicas: 1
  selector:
    app: nginx
  template:
    metadata:
      labels:
        app: nginx
    spec:
      containers:
      - name: nginx
        image: nginx:1.15.2
        ports:
        - containerPort: 80
        volumeMounts:
        - name: vol
          mountPath: /usr/share/nginx/html
      volumes:
      - name: vol
        persistentVolumeClaim:
          claimName: nginx-pvc-{{TEST_ID}}
      nodeSelector:
        node.info/availability.domain: {{AVAILABILITY_DOMAIN}} 
